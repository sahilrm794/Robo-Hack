# ===========================================
# Voice-to-Voice AI Customer Support Backend
# Environment Configuration
# ===========================================

# Application
APP_NAME=VoiceBot
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# API Keys
GROQ_API_KEY=your_groq_api_key_here

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# Model Settings
STT_MODEL_ID=ai4bharat/indicconformer_stt-hi-hybrid_ctc_rnnt-13M
LLM_MODEL_ID=llama-3.1-70b-versatile
TTS_MODEL_ID=ai4bharat/indic-tts

# Latency Targets (ms)
TARGET_LATENCY_MS=1000
STT_TIMEOUT_MS=500
LLM_TIMEOUT_MS=3000
TTS_TIMEOUT_MS=500

# Session Settings
SESSION_TIMEOUT_SECONDS=3600
MAX_CONVERSATION_TURNS=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent_log.md

# Feature Flags
ENABLE_STREAMING=true
ENABLE_FALLBACK_TTS=true
MOCK_STT_FOR_TESTING=true
